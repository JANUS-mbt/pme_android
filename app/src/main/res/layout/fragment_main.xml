<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
                name="vm"
                type="com.janus.platoon.vm.MainVM"/>
    </data>

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.login.MainActivityFragment"
            tools:showIn="@layout/activity_main">

        <android.support.constraint.Guideline
                android:id="@+id/gd_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.9"
        />
        <android.support.constraint.Guideline
                android:id="@+id/gd_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.2"
        />
        <android.support.constraint.Guideline
                android:id="@+id/gd_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.8"
        />
        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:tools="http://schemas.android.com/tools"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:id="@+id/map_fragment"
                  tools:context=".MainActivity"
                  android:name="com.google.android.gms.maps.SupportMapFragment"/>

        <Button
                android:id="@+id/my_rounded_sign_in_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/platoon_me"
                android:onClick="@{vm::performPlatoonMe}"
                android:textColor="@color/textColorLight"
                app:layout_constraintBottom_toBottomOf="@id/gd_bottom"
                android:background="@drawable/bt_rounded"
                app:layout_constraintLeft_toLeftOf="@id/gd_left"
                app:layout_constraintRight_toRightOf="@id/gd_right"
        />
    </android.support.constraint.ConstraintLayout>
</layout>